<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">

        <title>{% block title %}test{% endblock %}</title>



        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <!-- Styles -->
        {% block stylesheets %}
            <link href="{{ asset('assets/vendor.css') }}" rel="stylesheet" />
            <link href="{{ asset('assets/site-styles.css') }}" rel="stylesheet" />
        {% endblock %}


    </head>
    <body>
        <div class="content">
            {% block content %}{% endblock %}
        </div>

        {% block javascripts %}
            <script src="{{ asset('assets/manifest.js') }}"></script>
            <script src="{{ asset('assets/vendor.js') }}"></script>
            <script src="{{ asset('assets/site.js') }}"></script>
        {% endblock %}
    </body>
</html>
